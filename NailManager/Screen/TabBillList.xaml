                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock FontSize="18">Customer Name</TextBlock>
                                    <TextBox
                                        FontSize="12"
                                        Margin="0,0,0,10"
                                        Style="{StaticResource NormalInput}"
                                        Text=""
                                        x:Name="CustomerNameTextBox" />
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock FontSize="18">Customer Phone</TextBlock>
                                    <TextBox
                                        FontSize="12"
                                        Margin="0,0,0,10"
                                        Style="{StaticResource NormalInput}"
                                        Text=""
                                        x:Name="PhoneNumberTextBox" />
                                </StackPanel>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="100" />
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="150" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        FontSize="18"
                                        FontWeight="Bold"
                                        Grid.Column="0"
                                        Margin="0,10,0,5"
                                        Text="Bill: " />

                                </Grid>
                            </Grid>

                            <ScrollViewer Height="530">
                                <ItemsControl ItemsSource="{Binding SelectedItems}" x:Name="SelectedItemsControl">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border
                                                Background="White"
                                                BorderBrush="Gray"
                                                BorderThickness="1"
                                                CornerRadius="10"
                                                Margin="10"
                                                Padding="10">
                                                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="100" />
                                                        <ColumnDefinition Width="10" />
                                                        <ColumnDefinition Width="80" />
                                                        <ColumnDefinition Width="10" />
                                                        <ColumnDefinition Width="80" />
                                                        <!--  space  -->
                                                        <ColumnDefinition Width="10" />
                                                        <!--  remove  -->
                                                        <ColumnDefinition Width="100" />
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="50" />
                                                    </Grid.RowDefinitions>

                                                    <StackPanel Grid.Column="0" Grid.Row="0">
                                                        <TextBlock>Bill ID</TextBlock>
                                                        <TextBlock
                                                            FontSize="18"
                                                            FontWeight="Bold"
                                                            Text="{Binding bill_id}"
                                                            VerticalAlignment="Center" />
                                                    </StackPanel>

                                                    <StackPanel Grid.Column="2" Grid.Row="0">
                                                        <TextBlock>Price</TextBlock>
                                                        <TextBlock
                                                            FontSize="18"
                                                            FontWeight="Bold"
                                                            Foreground="Green"
                                                            Margin="10,0,0,0"
                                                            VerticalAlignment="Center">
                                                            <TextBlock.Text>
                                                                <Binding Path="price" StringFormat="{}{0} $" />
                                                            </TextBlock.Text>
                                                        </TextBlock>
                                                    </StackPanel>
                                                    <StackPanel Grid.Column="4" Grid.Row="0">
                                                        <TextBlock>Service Fee</TextBlock>
                                                        <TextBlock
                                                            FontSize="18"
                                                            FontWeight="Bold"
                                                            Foreground="Green"
                                                            Margin="10,0,0,0"
                                                            VerticalAlignment="Center">
                                                            <TextBlock.Text>
                                                                <Binding Path="service_fee" />
                                                            </TextBlock.Text>
                                                        </TextBlock>
                                                    </StackPanel>
                                                    <StackPanel Grid.Column="6" Grid.Row="0">
                                                        <TextBlock>Employee</TextBlock>
                                                        <TextBlock
                                                            FontSize="18"
                                                            FontWeight="Bold"
                                                            Foreground="Green"
                                                            Margin="10,0,0,0"
                                                            VerticalAlignment="Center">
                                                            <TextBlock.Text>
                                                                <Binding Path="user_name" />
                                                            </TextBlock.Text>
                                                        </TextBlock>
                                                    </StackPanel>

                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200" />
                                    <ColumnDefinition Width="20" />
                                    <ColumnDefinition Width="200" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    FontSize="18"
                                    FontWeight="Bold"
                                    Grid.Column="0"
                                    Margin="0,10,0,5"
                                    Text="Total payment" />
                                <TextBlock
                                    FontSize="24"
                                    FontWeight="Bold"
                                    Foreground="Green"
                                    Grid.Column="2"
                                    Margin="0,0,0,10"
                                    x:Name="TotalPrice" />
                            </Grid>
                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                <Button
                                    Background="Red"
                                    BorderThickness="0"
                                    Click="CancelBill"
                                    Content="Cancel Bill"
                                    FontSize="18"
                                    Foreground="White"
                                    Height="50"
                                    Margin="0,10,0,0"
                                    Style="{StaticResource ButtonCornerRadius}"
                                    Width="100">
                                    <Button.Visibility>
                                        <Binding Path="CancelBillName.Visibility">
                                            <Binding.Converter>
                                                <BooleanToVisibilityConverter />
                                            </Binding.Converter>
                                        </Binding>
                                    </Button.Visibility>
                                </Button>

                                <StackPanel Width="30" />
                            </StackPanel>

                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

        </StackPanel>

    </Grid>
</UserControl>